mixin _single(title, image)
    li.single(style=`background-image:url(${image})`)
        .single__content
            .single__from
                .single__date 09.02.2018
                .single__by by
                .single__autor betta
            h3.single__title= title
            .single__button
                +_button('read more', 'button_gonka')

mixin singleBig(title, image)
    li.single-big
        .single-big__content-image
            a(href="#")
                img.single-big__image(src=image, alt=title)
            .single-big__tags
                +_button( 'GYM', 'button_gonka button_gonka_tag')
                +_button( 'GYM', 'button_gonka button_gonka_tag')
                +_button( 'GYM', 'button_gonka button_gonka_tag')
