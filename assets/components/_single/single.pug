mixin widjet(title, isTags)
    .widjet
        h3.widjet__title= title
        - if (isTags === 1)
            +widjetTags()
        - else if (isTags === 0)
            +widjetResentPosts()
        - else if (isTags === 2)
            +_socials('socials_widjet')




